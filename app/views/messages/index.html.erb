

	<% @messages.each do |msg| 	%>
		<div class="container">
			<div class="round messages" >
				<p class="small_bottom">
					<div class = "time_mess "><%= msg.created_at %></div>
					<% user = msg.user rescue User.find(msg.user_id) %>
					<div class = "time_mess "><%= user.name %></div>
					<div class = "text_mess "><%= msg.text	 %></div>
				</p>
			</div>		
		</div>

	<% end	%>
    
  
