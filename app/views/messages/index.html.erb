

	<% @messages.each do |msg| 	%>
		
		<div class="round messages">
			<% user = msg.user rescue User.find(msg.user_id) %>
			<div class = "time_mess ">
				<%= "#{user.name} сообщил в #{msg.created_at.strftime("%Y-%m-%d %H:%M")}" %>
			</div>
			<div class = "text_mess ">
				<%= msg.text	 %>
			</div>
		</div>

	<% end	%>
    
  
